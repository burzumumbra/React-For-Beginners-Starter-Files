/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/
.order-enter 
  transform translateX(-120%) rotate(0)
  transition .5s
  max-height 0
  padding 0
  &.order-enter-active 
    transform translateX(0) rotate(1440deg)
    max-height 60px
    padding 2rem 0
    
.order-exit 
  transform translateX(0)
  transition .5s
  &.order-exit-active 
    transform translateX(-120%)

.count-enter
  background red
  transition: .5s
  transform: translateY(100%)
  &.count-enter-active
    background yellow
    transform: translateY(0)
.count-exit
  background black
  transform: translateY(0)
  transition: .5s
  position absolute
  left 0
  bottom 0
  &.count-exit-active
    background green
    transform: translateY(-100%)